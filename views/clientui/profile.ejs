<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("partials/head") %>
</head>

<body>
    <header>
        <%- include("partials/header") %>
    </header>
    <br />
    <br />
    <div class="container">
        <div class="jumbotron">
            <div class="row-lg-12 text-center">
                <% if(user.photoURL!=null){%>
                <img src="<%= user.photoURL %>" style="width: 150px; height: 150px;" alt="John Doe">
                <% } else {%>
                    <img src="images/profile.webp" style="width: 150px; height: 150px;" alt="John Doe">
                    <% }%>
                <h1 class="display-3 p-3"><%= user.displayName %></h1>
            </div>
            <br><br>
            <div class="row-lg-12 d-flex justify-content-center" >
                <div class="col-lg-8 ">
                    <h6><strong></strong>EMAIL<span style="float: right;">&nbsp;<%=user.email %></span></h6><br>
                    <h6><strong></strong>PHONE NUMBER<span style="float: right;">&nbsp;<%=user.phoneNumber %></span></h6><br>
                    <h6><strong></strong>ADDRESS<span style="float: right;">&nbsp;<%= address %></span></h6><br>
                </div>
            </div>
            <div class="row-lg-12 d-flex justify-content-center" >
                <div class="col-lg-12 sm-4 md-8">
                    <table class="table">
                        <h6><strong></strong><h2>Orders</h2> </h6><br>
                        <thead class="thead-dark">
                            <tr>
                                <th scope="col">S.No</th>
                                <th scope="col">OrderID</th>
                                <th scope="col">Date</th>
                                <th scope="col">Items</th>
                                <th scope="col">Address</th>
                                <th scope="col">Total</th>
                                <th scope="col">Operations</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% orders.forEach(function(order,index){ %>
                                <tr>
                                    <td><%= index+1 %></td>
                                    <td><%= order.orderid %></td>
                                    <td><%= order.order_day %></td>
                                    <td>
                                        <% order.cart.products.forEach(function(product){%>
                                        <%= product.qty_purchased %> X <%= product.item_name %> <br>
                                        <% })%>
                                    </td>
                                    <td><%= order.address %></td>
                                    <td><%= order.total %></td>
                                    <td>
                                        <a href="/order-details/<%= order.orderid %>"><button type="button" class="btn btn-sm btn-warning">Details</button></a>
                                    </td>
                                </tr>
                            <% })%>
                            </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <%- include ("partials/footer") %>
</body>

</html>