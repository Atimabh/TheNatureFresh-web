<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ("partials/head.ejs") %>
</head>

<body>
    <header>
        <%- include ("partials/header.ejs") %>
    </header>
    <br />
    <br />
    <div class="container">
        <h3>Order Details of <%= user.displayName %></h3>
        <hr>
        <div class="row">
            <div class="col-lg-6">
                <div class="box-element">
                    <h3><u>Delivery Details</u></h3>
                    <hr>
                    <h5><strong>Order Id: </strong> <%= orders.orderid %></h5>
                    <h5><strong>Phone Number: </strong> <%= orders.phone_number %></h5>
                    <h5><strong>Order Placed:</strong> <%= orders.order_day %></h5>
                    <h5><strong>Delivery Address:</strong>  <%= orders.address %></h5>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="box-element">
                    <h3><u>Bill</u></h3>
                    <hr>
                    <h5><strong>GST: </strong>  <%= orders.gst %></h5>
                    <h5><strong>CGST: </strong>  <%= orders.cgst %></h5>
                    <h5><strong>SGST:</strong>  <%= orders.sgst %></h5>
                    <h5><strong>Delivery Charge: </strong> &#8377; <%= orders.delivery_charge %></h5>
                    <h5><strong>Total:</strong> &#8377;<u> <%= orders.total %></u></h5>
                </div>
            </div>
        </div>
        <br>
        <br>
        <div class="row">
        <div class="col-lg-12">
                <h3><u>Ordered Items</u></h3>
                <hr>
                <div class="row">
                    <div style="flex:2"></div>
                    <div style="flex:2"><strong>Item</strong></div>
                    <div style="flex:1"><strong>Price</strong></div>
                    <div style="flex:1"><strong>Quantity</strong></div>
                    <div style="flex:1"><strong>Total</strong></div>
                </div>
                <br><br>
                <% orders.cart.products.forEach(function(item){%>
                    <div class="row">


                        <div style="flex:2"><img class="row-image w-50" src="<%= item.image_url %>" /></div>
                        <div style="flex:2">
                            <p><%= item.item_name %></p>
                        </div>
                        <div style="flex:1">
                            <p>&#8377;<%= item.price %></p>
                        </div>
                        <div style="flex:1">
                            <p><%= item.qty_purchased %></p>
                            <!-- <div class="quantity">
                                <img data-product=1 data-action="add" class="chg-quantity update-cart"
                                    src="images/arrow-up.png">

                                <img data-product=1 data-action="remove"
                                    class="chg-quantity update-cart" src="images/arrow-down.png">
                            </div> -->
                        </div>
                        <div style="flex:1">
                            <p>&#8377;<%= item.price * item.qty_purchased %></p>
                        </div>
                    </div>
                    <br>
                    <br>
                    <%})%>
        </div>
    </div>
    
        <footer>
            <%- include ("partials/footer.ejs") %>
        </footer>
</body>

</html>